<!--<h1><%#= "#{@user.nombre}  contacts" %></h1> otra forma de meter el nombre-->

<div class="container">
  <br>

  <h1 class="centra"><%= @user.nombre %> <small class="grey">contacts</small></h1>
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xs-offset-3 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
      <table class="table table-striped table-hover col-centered">
        <tbody>
          <tr>
            <th>Nombre</th>
            <th>Numtlf</th>
            <th>NavegaciÃ³n</th>
          </tr>

          <% @contacts.each do |contact| %>
            <tr>       <!--################### Navegacion con link_to ##########################-->
              <td><%= contact.nombre %></td>
              <td><%= contact.numTlf %></td>
              <td><%= link_to ' Show', user_contact_path(contact.user, contact), :class => 'btn btn-primary btn-xs fa fa-info-circle' %>
                  <%= link_to ' Edit', edit_user_contact_path(contact.user, contact), :class => 'btn btn-warning btn-xs fa fa-cogs' %>
                  <%= link_to ' Delete', user_contact_path(:user_id => contact.user_id, :id => contact), :class => 'btn btn-danger btn-xs fa fa-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>                                   
          <% end %>
        </tbody>
      </table>
      <div class="centra">
        <%= paginate @contacts %>
      </div>
      <br />
    </div> 
  </div>

  <div class="centra box-blue-round col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xs-offset-3 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
    <%= link_to 'New Contact', new_user_contact_path(@user) %> -- 
    <%= link_to 'BackToUser', user_path(@user) %> -- 
    <%= link_to 'AllUsers', users_path %>
  </div>

</div>